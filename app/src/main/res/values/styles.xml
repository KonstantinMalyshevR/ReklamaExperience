<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/color_white</item>
    </style>

    <style name="ButtonThemeGreen" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@drawable/button_green_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>